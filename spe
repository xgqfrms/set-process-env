#!/usr/bin/env node

/**
 *
 * @author xgqfrms
 * @license MIT
 * @copyright xgqfrms 2021.10.14
 *
 * @description PORT_ENV Genarator
 * @augments
 * @example node env-generator.js env=dev
 *
 */

const packageInfo = require("./package.json");

const fs = require("fs");

const {
  version,
  argv,
  // versions,
  // arch,
  // platform,
  // env,
} = process;

// v12.18.0
console.log('\nðŸš€ your node.js version =', version.substr(1).split('.')[0]);

// const args = process.argv.slice(2) || [];
const args = argv.slice(2) || [];

const filename = "./env.js";

const isPureNumber = (str = '') => {
  const numberDict = [...''.padEnd(10, 'x')].map((item, i) => `${i}`);
  const arr = `${str}`.split('');
  return arr.every(item => numberDict.includes(item));
}

let key = "";
let env = "";
if (!args[0]) {
  args[0] = "";
  console.log(`version = ${packageInfo.version}`);
  key = 'APP_ENV';
  env = 'dev';
} else {
  const tempArr = args[0].split('=');
  key = tempArr[0] || 'PORT_ENV';
  env = isPureNumber(tempArr[1]) ? parseInt(tempArr[1]) : tempArr[1];
}

let defaultTemplate = ``;
let envTemplate = ``;
// ES5
if (isPureNumber(env)) {
  defaultTemplate = `// default\nconst ${key} = ${env};\nmodule.exports = ${key};\n`;
  envTemplate = `// ðŸŽ‰\nconst ${key} = ${env};\nmodule.exports = ${key};\n`;
} else {
  defaultTemplate = `// default\nconst ${key} = '${env}';\nmodule.exports = ${key};\n`;
  envTemplate = `// ðŸŽ‰\nconst ${key} = '${env}';\nmodule.exports = ${key};\n`;
}

console.log('\nðŸŽ® creating...');

fs.open(filename, "r", (err, fd) => {
  if (err) {
    fs.writeFile(filename, defaultTemplate, (err, fd) => {
      if (err) {
        console.log(`writeFile err =`, err);
      }
    });
  } else {
    fs.writeFile(filename, envTemplate, (err, fd) => {
      if (err) {
        console.log(`writeFile err =`, err);
      }
    });
  }
});

console.log('\nðŸŽ‰ finished!');
